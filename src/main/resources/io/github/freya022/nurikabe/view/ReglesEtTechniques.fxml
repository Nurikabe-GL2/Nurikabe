            <Tab closable="false" text="Règles">
               <content>
                  <ScrollPane fitToWidth="true" style="-fx-background-color: #152247;">
                     <content>
                        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" spacing="10.0" style="-fx-background-color: #152247; -fx-border-color: #152247;">
